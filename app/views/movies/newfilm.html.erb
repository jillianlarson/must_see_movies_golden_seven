<h1>Add a New Movie</h1>

<form action="/movies/create" class="form-horizontal">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">
      Title
    </label>
    <div class="col-sm-10">
      <input type="text" id="title" name="the_title" placeholder="Title" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">
      Year
    </label>
    <div class="col-sm-10">
      <input type="text" id="year" name="the_year" placeholder="Year" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">
      Duration
    </label>
    <div class="col-sm-10">
      <input type="text" id="duration" name="duration" placeholder="Duration" class="form-control">
    </div>
  </div>

<div class="form-group">
    <label for="description" class="col-sm-2 control-label">
      Description
    </label>
    <div class="col-sm-10">
      <textarea id="description" name="the_description" placeholder="Description" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="the_image" placeholder="Image url" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Movie" class="btn btn-primary">
    </div>
  </div>
</form>

<a href="/movies">Back to Movies</a>
