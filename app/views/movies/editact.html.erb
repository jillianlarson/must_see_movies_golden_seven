<h1>Edit Actor #<%= @act.id %></h1>

<form action="/actors/update/<%= @act.id %>" class="form-horizontal">

  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="the_name" placeholder="Name" class="form-control" value="<%= @act.name %>">
    </div>
  </div>

  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="the_dob" placeholder="Dob" class="form-control" value="<%= @act.dob %>">
    </div>
  </div>

  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-10">
      <textarea id="bio" name="the_bio" placeholder="Bio" class="form-control" rows="3"><%= @act.bio %></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="the_image" placeholder="Image url" class="form-control" value="<%= @act.image_url %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Actor" class="btn btn-primary">
    </div>
  </div>
</form>
